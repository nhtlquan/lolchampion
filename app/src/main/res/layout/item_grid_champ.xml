<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_item_boder">

    <ImageView
        android:id="@+id/img_champion"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="1.0dip"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/unchampion" />

    <TextView
        android:id="@+id/tv_champion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_champion"
        android:layout_marginEnd="1.0dip"
        android:layout_marginStart="1.0dip"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        fontPath="font/beaufortforlol-bold.ttf"
        android:text="Pantheon"
        android:background="#70000000"
        android:textAllCaps="true"
        android:layout_centerInParent="true"
        android:textColor="#fee123"
        android:textSize="10.0sp" />
</RelativeLayout>